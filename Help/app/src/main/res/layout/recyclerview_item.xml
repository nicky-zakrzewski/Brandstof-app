<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/recycler_view_item_gas_station.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/gasStationLogoImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dats24"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/gasStationNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gas Station Name"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/fuelPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬1.50"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
